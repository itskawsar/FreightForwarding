@model FFSolution.Models.AspNetRoles

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Roles</h2>

<div>
    <h4>AspNetRoles</h4>
	<hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>
</div>
<p>
    @*@Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |*@
    @Html.ActionLink("Back to list", "Index", null, new { @class = "btn btn-primary" })
</p>


<h1>Users</h1>
<table class="table">
    <tr>
        <th>
            ID
        </th>
        <th>
            Name
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.AspNetUsers)
    {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "User", new { id = item.Id }, null) |
                @Html.ActionLink("Details", "Details", "User", new { id = item.Id }, null) |
                @Html.ActionLink("Delete", "Delete", "User", new { id = item.Id}, null)
            </td>
        </tr>
    }
</table>