@model IEnumerable<FFSolution.Models.Courier>

@{
    ViewBag.Title = "Courier List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table id="MyTable" class="display" cellspacing="0">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Updated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Updator)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourierName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourierDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourierAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourierTelephone)
            </th>
            <th>
                Acct (USD)
            </th>
            <th>
                Acct (EUR)
            </th>
            <th>
                Acct (EGP)
            </th>
            <th></th>
        </tr>
        </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Updated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Updator)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CourierName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CourierDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CourierAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CourierTelephone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountNumberUSD)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountNumberEUR)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountNumberEGP)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.CourierID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.CourierID })
                </td>
            </tr>
        }
    </tbody>
</table>
